<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bignerdranch.android.vocabularyapp">

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.VocabularyApp">

        <activity android:name=".GameMain" />
        <activity android:name=".StartGameScreenActivity"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".StartingScreenActivity"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".FavoriteActivity"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".QuizActivity"/>
        <activity android:name=".FinishScreenActivity"/>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".FloatingWindow" android:enabled="true"/>
    </application>

</manifest>