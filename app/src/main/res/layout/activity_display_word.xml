<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisplayWordActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@drawable/bg_header">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:onClick="onClickBtnBack"
            android:src="@drawable/ic_action_backarrow"
            tools:ignore="OnClick" />


        <TextView
            android:id="@+id/txt_word"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:textSize="30sp"
            android:textColor="@color/white"/>

        <ImageButton
            android:id="@+id/btn_sound"
            android:layout_width="40sp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_action_sound"
            app:tint="@color/colorPrimary"
            android:background="@drawable/search_icon_background"/>

        <ImageButton
            android:id="@+id/btn_book_mark"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            app:tint="@color/colorPrimary"
            android:background="@drawable/search_icon_background"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_action_bookmark" />

    </LinearLayout>

    <TextView
        android:id="@+id/txt_ans"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:padding="20dp"
        android:scrollbars="vertical"/>
</LinearLayout>