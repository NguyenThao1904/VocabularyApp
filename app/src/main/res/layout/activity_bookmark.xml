<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#F6F4F4">

    <RelativeLayout
        android:id="@+id/toolSearch_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/act_bar"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <AutoCompleteTextView
            android:id="@+id/searchAll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="30dp"
            android:background="@android:color/white"
            android:padding="10dp"
            android:hint="Tra Từ Anh Việt"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/star_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20pt"
            android:layout_marginLeft="20pt"
            android:layout_marginTop="40dp"
            app:srcCompat="@drawable/ic_star"
            tools:ignore="VectorDrawableCompat" />

        <ImageView
            android:id="@+id/star_mark2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20pt"
            android:layout_marginTop="40dp"
            app:srcCompat="@drawable/ic_star"
            tools:ignore="VectorDrawableCompat" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/searchBox_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolSearch_bar"
        android:background="@color/white">

        <AutoCompleteTextView
            android:id="@+id/searchFav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:padding="10dp"
            android:textSize="20sp"
            android:background="@drawable/search_bar"
            android:hint="Tìm từ yêu thích"/>

        <ImageView
            android:id="@+id/star_mark3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_star"
            android:layout_marginStart="20pt"
            android:layout_marginTop="30dp"
            tools:ignore="RtlCompat,VectorDrawableCompat"/>
        ></RelativeLayout>

    <LinearLayout
        android:id="@+id/list_bookmark"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20pt"
        android:orientation="vertical"
        android:layout_weight="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/searchBox_bar"
        android:background="@drawable/bg_shadow_lv">

        <ListView
            android:id="@+id/list_fav_word"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:divider="@color/black"
            android:dividerHeight="1dp"
            android:listSelector="#BBDEFB" />
    </LinearLayout>

